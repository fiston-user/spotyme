# Server Configuration
PORT=3000
NODE_ENV=development

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/callback

# Database Configuration
# For local development without Docker:
MONGODB_URI=mongodb://localhost:27017/spotyme
# For Docker Compose (will be automatically set in docker-compose.yml):
# MONGODB_URI=mongodb://spotyme_user:spotyme_pass@mongodb:27017/spotyme?authSource=spotyme

# Docker MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_root_password_here
MONGO_DATABASE=spotyme
MONGO_USER=spotyme_user
MONGO_PASSWORD=your_secure_mongo_password_here

# Session Configuration
SESSION_SECRET=your_session_secret_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8081

# OpenAI Configuration (for AI-based recommendations)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Encryption Configuration
# Generate a secure key: openssl rand -hex 32
ENCRYPTION_KEY=your_32_character_or_longer_encryption_key_here

# Redis Configuration
# For local development without Docker:
REDIS_URL=redis://localhost:6379
# For Docker Compose (will be automatically set in docker-compose.yml):
# REDIS_URL=redis://redis:6379
# For production with password:
# REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password_here