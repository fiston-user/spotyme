{
  "name": "spotyme-backend",
  "version": "1.0.0",
  "description": "Backend API for SpotYme - Spotify playlist generator",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v",
    "docker:rebuild": "docker-compose down && docker-compose build --no-cache && docker-compose up -d",
    "docker:push": "docker build -t spotyme-backend . && echo 'Ready to push: docker push <your-registry>/spotyme-backend:latest'",
    "docker:prod": "docker-compose --env-file .env.production up -d",
    "docker:prod:rebuild": "docker-compose down -v && docker-compose --env-file .env.production build --no-cache && docker-compose --env-file .env.production up -d",
    "docker:prod:logs": "docker-compose --env-file .env.production logs -f"
  },
  "keywords": [
    "spotify",
    "api",
    "playlist",
    "music"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.2",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "openai": "^5.12.2",
    "pino": "^9.9.0",
    "spotify-web-api-node": "^5.0.2"
  },
  "devDependencies": {
    "@types/connect-mongo": "^3.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/spotify-web-api-node": "^5.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "pino-pretty": "^13.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
